<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true"
              android:focusableInTouchMode="true"
              tools:context=".MenuPrincipal"
              android:orientation="vertical"
              android:id="@+id/main_layout">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/top_layout">
        <TextView
                android:text="Modo de visualização"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/textView"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/modoView">
            <RadioButton
                    android:text="Texto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkTexto" android:layout_weight="1"/>
            <RadioButton
                    android:text="Gráfico de barras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkGrafico" android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_layout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/salvarDadosLayout">
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchSalvarDados"/>
            <TextView
                    android:text="Salvar dados a cada"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:ems="3"
                    android:id="@+id/edtIntervalo" android:inputType="numberDecimal"/>
            <TextView
                    android:text="segundos."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/textView3"/>
        </LinearLayout>
        <Button
                android:text="Apagar dados salvos"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeletarDados"/>
        <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/campoFixo">
            <TextView
                    android:text="HORÁRIO"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtView1"
                    android:textStyle="bold" android:textSize="16sp" android:layout_weight="5"/>
            <TextView
                    android:text="EIXO X"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtView2"
                    android:textStyle="bold" android:textSize="16sp" android:layout_weight="1"/>
            <TextView
                    android:text="EIXO Y"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtView3"
                    android:textSize="16sp" android:textStyle="bold" android:layout_weight="1"/>
            <TextView
                    android:text="EIXO Z"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtView4"
                    android:textStyle="bold" android:textSize="16sp" android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/layoutDadosSalvos">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
