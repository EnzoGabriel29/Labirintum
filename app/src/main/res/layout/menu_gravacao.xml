<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rec_layout"
        tools:context=".MainActivity">

    <TextView
            android:text="Eixo X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtView1"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"/>

    <TextView
            android:text="0.00 m/s²"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEixoX"
            android:layout_toRightOf="@id/txtView1"
            android:layout_toEndOf="@id/txtView1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

    <TextView
            android:text="Eixo Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtView2"
            android:layout_below="@id/txtEixoX"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"/>

    <TextView
            android:text="0.00 m/s²"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEixoY"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtView1"
            android:layout_toRightOf="@id/txtView2"
            android:layout_toEndOf="@id/txtView2"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

    <TextView
            android:text="Eixo Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtView3"
            android:layout_below="@id/txtEixoY"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"/>

    <TextView
            android:text="0.00 m/s²"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEixoZ"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtView2"
            android:layout_toRightOf="@id/txtView3"
            android:layout_toEndOf="@id/txtView3"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>


    <TextView
            android:text="Dados registrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/txtView3"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/txtView4"/>
    <ScrollView
            android:layout_below="@id/txtView4"
            android:paddingBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableLayout
                android:id="@+id/tabelaDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="HORÁRIO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                <TextView
                        android:text="Eixo X"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Eixo Y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Eixo Z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>
            </TableRow>


        </TableLayout>
    </ScrollView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/controll_layout"
            android:showDividers="middle"
            android:background="@drawable/rectangle"
            android:divider="?attr/dividerVertical">

        <TextView
                android:text="Pausar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPausar"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"

                android:layout_weight="1"
                android:textSize="20sp"/>

        <TextView
                android:text="Parar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnParar"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>
