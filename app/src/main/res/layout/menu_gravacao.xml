<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rec_layout"
    tools:context=".MainActivity">

    <ScrollView
        android:paddingBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:id="@+id/layoutGraphs">

                <TextView
                    android:text="Eixo X - Acelerômetro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"/>

                <com.jjoe64.graphview.helper.GraphViewXML
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:seriesData="0=0"
                    android:id="@+id/graphAccEixoX"/>

                <TextView
                    android:text="Eixo Y - Acelerômetro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"/>

                <com.jjoe64.graphview.helper.GraphViewXML
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:seriesData="0=0"
                    android:id="@+id/graphAccEixoY"/>

                <TextView
                    android:text="Eixo Z - Acelerômetro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"/>

                <com.jjoe64.graphview.helper.GraphViewXML
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:seriesData="0=0"
                    android:id="@+id/graphAccEixoZ"/>

                <TextView
                    android:text="Eixo X - Giroscópio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"/>

                <com.jjoe64.graphview.helper.GraphViewXML
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:seriesData="0=0"
                    android:id="@+id/graphGirEixoX"/>

                <TextView
                    android:text="Eixo Y - Giroscópio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"/>

                <com.jjoe64.graphview.helper.GraphViewXML
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:seriesData="0=0"
                    android:id="@+id/graphGirEixoY"/>

                <TextView
                    android:text="Eixo Z - Giroscópio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"/>

                <com.jjoe64.graphview.helper.GraphViewXML
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:seriesData="0=0"
                    android:id="@+id/graphGirEixoZ"/>

            </LinearLayout>

            <TextView
                android:layout_below="@id/layoutGraphs"
                android:text="Dados registrados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txtView4"/>

            <TableLayout
                android:layout_below="@id/txtView4"
                android:id="@+id/tabelaDados"
                android:stretchColumns="*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView01"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Acelerômetro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView02"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_span="3"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Giroscópio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView03"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_span="3"
                        android:layout_weight="1"/>
                    
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Tempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView04"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="X"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView05"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView06"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView07"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="X"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView08"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView09"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/controll_layout"
        android:showDividers="middle"
        android:background="@drawable/rectangle"
        android:divider="?attr/dividerVertical">

        <TextView
            android:text="Pausar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPausar"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <TextView
            android:text="Parar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnParar"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>