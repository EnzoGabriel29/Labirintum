<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rec_layout"
    tools:context=".MenuPrincipal">

    <ScrollView
        android:paddingBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:id="@+id/layoutGraphs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="@string/eixo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:text="@string/sensor_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <com.jjoe64.graphview.helper.GraphViewXML
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:seriesData="0=0"
                        android:id="@+id/graphAccEixoX"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="@string/eixo_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:text="@string/sensor_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <com.jjoe64.graphview.helper.GraphViewXML
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        app:seriesData="0=0"
                        android:id="@+id/graphAccEixoY"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="@string/eixo_z"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:text="@string/sensor_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <com.jjoe64.graphview.helper.GraphViewXML
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:seriesData="0=0"
                        android:id="@+id/graphAccEixoZ"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="@string/eixo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:text="@string/sensor_gir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <com.jjoe64.graphview.helper.GraphViewXML
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:seriesData="0=0"
                        android:id="@+id/graphGirEixoX"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="@string/eixo_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:text="@string/sensor_gir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <com.jjoe64.graphview.helper.GraphViewXML
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:seriesData="0=0"
                        android:id="@+id/graphGirEixoY"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="@string/eixo_z"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:text="@string/sensor_gir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <com.jjoe64.graphview.helper.GraphViewXML
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:seriesData="0=0"
                        android:id="@+id/graphGirEixoZ"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_below="@id/layoutGraphs"
                android:text="@string/tag_dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txtView4"/>

            <TableLayout
                android:layout_below="@id/txtView4"
                android:id="@+id/tabelaDados"
                android:stretchColumns="*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/string_vazia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView01"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/sensor_acc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView02"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_span="3"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/sensor_gir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView03"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_span="3"
                        android:layout_weight="1"/>
                    
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/tag_tempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView04"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/raw_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView05"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/raw_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView06"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/raw_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView07"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/raw_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView08"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/raw_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView09"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="@string/raw_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1"/>

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/controll_layout"
        android:showDividers="middle"
        android:background="@drawable/rectangle"
        android:divider="?attr/dividerVertical">

        <TextView
            android:text="@string/btn_pausar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPausar"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <TextView
            android:text="@string/btn_parar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnParar"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>